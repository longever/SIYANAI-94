
{
  "name": "asset_library",
  "title": "素材库",
  "schemas": [
    {
      "name": "name",
      "title": "素材名称",
      "type": "String"
    },
    {
      "name": "type",
      "title": "素材类型",
      "type": "String",
      "enum": ["image", "video", "audio", "model", "other"]
    },
    {
      "name": "category",
      "title": "素材分类",
      "type": "String",
      "enum": ["personal", "platform"]
    },
    {
      "name": "url",
      "title": "文件URL",
      "type": "Url"
    },
    {
      "name": "thumbnail",
      "title": "缩略图URL",
      "type": "Image"
    },
    {
      "name": "cloudPath",
      "title": "云存储路径",
      "type": "String",
      "description": "文件在云存储中的完整路径"
    },
    {
      "name": "fileSize",
      "title": "文件大小",
      "type": "Number",
      "description": "文件大小，单位为字节"
    },
    {
      "name": "uploadTime",
      "title": "上传时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "tags",
      "title": "标签",
      "type": "Array",
      "items": {
        "type": "String"
      }
    },
    {
      "name": "mimeType",
      "title": "MIME类型",
      "type": "String",
      "description": "文件的MIME类型，如image/jpeg、video/mp4等"
    },
    {
      "name": "duration",
      "title": "时长(秒)",
      "type": "Number",
      "description": "视频或音频的时长，单位为秒"
    },
    {
      "name": "dimensions",
      "title": "尺寸信息",
      "type": "Object",
      "description": "图片或视频的宽度和高度信息"
    },
    {
      "name": "metadata",
      "title": "元数据",
      "type": "Object",
      "description": "额外的文件元数据信息"
    },
    {
      "name": "usageCount",
      "title": "使用次数",
      "type": "Number",
      "default": 0
    },
    {
      "name": "downloadCount",
      "title": "下载次数",
      "type": "Number",
      "default": 0
    },
    {
      "name": "isPlatform",
      "title": "是否平台素材",
      "type": "Boolean",
      "default": false
    }
  ]
}
